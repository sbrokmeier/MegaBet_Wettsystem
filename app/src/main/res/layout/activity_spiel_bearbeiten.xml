<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spiel_bearbeiten"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.fh_bielefeld.megabet.SpielBearbeitenActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="afoerster@fh-bielefeld.de"
            android:layout_width="252dp"
            android:layout_height="33dp"
            android:id="@+id/TextViewUsername"
            android:layout_weight="0.18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Spiel hinzufÃ¼gen"
            android:ems="10"
            android:id="@+id/textViewSpiel"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_weight="1.41" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="Heim:"
                android:ems="10"
                android:id="@+id/textViewHeim" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Bielefeld"
                android:ems="10"
                android:id="@+id/editTextHeim"
                android:layout_weight="3.36" />

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Gast:"
            android:ems="10"
            android:id="@+id/TextViewGast" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Paderborn"
            android:ems="10"
            android:id="@+id/editTextGast"
            android:layout_weight="3.36" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Datum:"
                android:ems="10"
                android:id="@+id/textViewDatum" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editTextDatum"
                android:layout_weight="1"
                android:text="12.11.2016" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Uhrzeit:"
                android:ems="10"
                android:id="@+id/textViewUhrzeit" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/editTextUhrzeit"
                android:layout_weight="1"
                android:text="15:30" />

        </LinearLayout>

        <TextView
            android:text="Ergebnis"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/textViewErgebnis"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:text="Sieg Heim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1" />

        <RadioButton
            android:text="Sieg Gast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:text="Unentschieden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3" />
    </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="95dp">

            <Button
                android:text="Abbrechen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ButtonAbbrechen"
                android:layout_weight="1"
                android:onClick="onCancelClicked" />

            <Button
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ButtonOK"
                android:layout_weight="1"
                android:onClick="onOKClicked" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
